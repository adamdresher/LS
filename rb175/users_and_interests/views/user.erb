<h3>User Info</h3>
<ul>
  <li><b>Name: </b><%= @user %></li>
  <li><b>Email address: </b><%= @email %></li>

  <li><b>Interests:</b></li>
    <ul>
      <% @interests.each do |interest| %>
        <li><%= interest %></li>
      <% end %>
    </ul>
</ul>

<div>
  <h4>Other Users</h4>
  <ul>
    <% @users.each do |user| %>
      <% name = user.first.capitalize.to_s  %>
      <% unless name == @user %>
        <li>
          <a href="/<%= name %>"><%= name %></a>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
